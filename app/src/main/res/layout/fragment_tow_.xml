<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".Tow_Fragment">


    <LinearLayout
        android:id="@+id/liner"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_margin="4dp"
                >

                <RelativeLayout
                    android:id="@+id/top_layout"
                    android:layout_width="190dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/index" />

                    <TextView
                        android:id="@+id/txt_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/icon"
                        android:layout_toEndOf="@+id/icon"
                        android:layout_toRightOf="@+id/icon"
                        android:text="پارت اول"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/img_dapter"
                        android:layout_width="180dp"
                        android:layout_height="170dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/icon"
                        android:background="@drawable/reading"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/img_dapter"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:text=">>"
                        android:textColor="#ff1122"
                        android:textSize="14dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="175dp"
            android:layout_marginLeft="14dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:textColor="@color/txtButton"
                 android:layout_width="match_parent"
                android:layout_height="130dp"
                android:textSize="20sp"
                android:text="Introductory Step to Understanding   \n\n NEXT" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/btn2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="3dp">

                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/index" />

                            <TextView
                                android:id="@+id/txt_adapter2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/icon2"
                                android:layout_toEndOf="@+id/icon2"
                                android:layout_toRightOf="@+id/icon2"
                                android:text="پارت دوم"
                                android:textColor="#000000"
                                android:textSize="15dp" />

                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:id="@+id/img_dapter2"
                                android:background="@drawable/readingl"
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                android:layout_below="@+id/icon2"
                                android:scaleType="fitXY" />


                        </RelativeLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:text="Introductory Step to Understanding   \n\n NEXT" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <android.support.v7.widget.CardView
                        android:id="@+id/btn3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_margin="4dp"
                        >

                        <RelativeLayout
                            android:id="@+id/top_layout3"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/icon3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/index" />

                            <TextView
                                android:id="@+id/txt_adapter3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/icon3"
                                android:layout_toEndOf="@+id/icon3"
                                android:layout_toRightOf="@+id/icon3"
                                android:text="پارت سوم"
                                android:textColor="#000000"
                                android:textSize="15dp" />

                            <ImageView
                                android:id="@+id/img_dapter3"
                                android:layout_width="100dp"
                                android:layout_height="126dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/readingll"
                                android:layout_below="@+id/icon3"
                                android:scaleType="fitXY" />

                      
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="200dp"
    >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp"
                    android:layout_margin="4dp"
                    >

                <RelativeLayout
                    android:id="@+id/top_layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/index" />

                    <TextView
                        android:id="@+id/txt_adapter4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon4"
                        android:layout_toEndOf="@+id/icon4"
                        android:layout_toRightOf="@+id/icon4"
                        android:text="پارت نهایی"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tp"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@+id/icon4"
                        android:gravity="center"
                        android:textColor="#303030"
                        android:scaleType="fitXY"
                        android:text="Many of life’s failures are men

who never realized how close

they were to success

when they gave up.\n
NEXT
" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>







            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
